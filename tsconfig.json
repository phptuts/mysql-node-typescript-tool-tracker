{
  "compilerOptions": {
    "outDir": "dist",
    /* Basic Options */
    "target": "es2018",
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*", "src/*", "config.json"],
  "exclude": ["node_modules"]
}
